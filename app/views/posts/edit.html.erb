<div class="container">
	<h1>Edit Your Song Info</h1>

	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |msg| %>
			<div class="red-text"><%= msg %></div>
		<% end %>
	<% end %>

	<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
		
		<div class="form-inputs">
			<%= f.label(:title, {:class => "form-label"})%>
			<%= f.text_field :title %>
		</div>

		<div>
			<%= f.label(:artist, {:class => "form-label"})%>
			<%= f.text_field :artist %>
		</div>

		<div>
			<%= f.label(:url, {:class => "form-label"})%>
			<%= f.text_field :url %>
		</div>
			
		<div>
			<%= f.submit({:class => "btn btn-primary"}) %>
			<%= link_to "Cancel", posts_path, :class => "btn grey" %>
		</div>

	<% end %>

</div>
